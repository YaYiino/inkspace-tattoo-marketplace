# Staging Environment Configuration
# This file contains staging-specific environment variables
NODE_ENV=production

# Supabase Configuration (Staging)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_staging_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_staging_supabase_service_role_key

# Application URLs (Staging)
NEXT_PUBLIC_APP_URL=https://antsss-tattoo-marketplace-staging.vercel.app
NEXTAUTH_URL=https://antsss-tattoo-marketplace-staging.vercel.app

# Database Configuration (Staging)
DATABASE_URL=postgresql://staging_user:password@staging_host:5432/antsss_tattoo_staging

# Authentication (Staging)
NEXTAUTH_SECRET=your_staging_nextauth_secret_key
JWT_SECRET=your_staging_jwt_secret_key

# OAuth Providers (Staging)
GOOGLE_CLIENT_ID=your_staging_google_client_id
GOOGLE_CLIENT_SECRET=your_staging_google_client_secret

# File Upload Configuration (Staging)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Feature Flags (Staging - Test new features here first)
NEXT_PUBLIC_FEATURE_BOOKING_V2=true
NEXT_PUBLIC_FEATURE_ADVANCED_SEARCH=true
NEXT_PUBLIC_FEATURE_AI_RECOMMENDATIONS=true
NEXT_PUBLIC_FEATURE_REAL_TIME_CHAT=true
NEXT_PUBLIC_FEATURE_BETA_DASHBOARD=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_DEBUG_MODE=true

# Logging and Debugging (Staging)
LOG_LEVEL=debug
NEXT_PUBLIC_DEBUG_MODE=true

# Payment Integration (Staging - Test Mode)
STRIPE_PUBLISHABLE_KEY=pk_test_staging_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_staging_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_staging_webhook_secret

# Email Configuration (Staging)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=staging_smtp_user
SMTP_PASS=staging_smtp_password
SMTP_FROM=noreply@staging.antsss.dev

# Redis Configuration (Staging)
REDIS_URL=redis://staging-redis:6379

# Search Configuration (Staging)
ELASTICSEARCH_URL=http://staging-elasticsearch:9200

# API Rate Limiting (Staging - More Lenient)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# Monitoring and Analytics (Staging)
SENTRY_DSN=https://your_staging_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_org
SENTRY_PROJECT=antsss-staging
SENTRY_AUTH_TOKEN=your_staging_sentry_auth_token

# Performance Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_staging_vercel_analytics_id

# Security Headers (Staging)
SECURE_HEADERS_ENABLED=true
CSP_REPORT_ONLY=false

# Testing and Development (Staging)
ENABLE_TEST_ROUTES=true
MOCK_EXTERNAL_APIS=false
STAGING_TEST_USER=staging_test@antsss.dev
STAGING_TEST_PASSWORD=staging_test_password_123

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# Development Tools (Limited in staging)
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=false
NEXT_PUBLIC_ENABLE_DEBUG_TOOLBAR=false
NEXT_PUBLIC_ENABLE_MOCK_API=false

# Environment Identifier
NEXT_PUBLIC_ENV=staging
NEXT_PUBLIC_APP_NAME="Antsss (Staging)"