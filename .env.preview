# Preview Environment Configuration  
# This file contains preview-specific environment variables for PR deployments
NODE_ENV=production

# Supabase Configuration (Preview)
NEXT_PUBLIC_SUPABASE_URL=https://your-preview-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_preview_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_preview_supabase_service_role_key

# Application URLs (Preview - Dynamic)
NEXT_PUBLIC_APP_URL=https://antsss-tattoo-marketplace-preview-{PR_NUMBER}.vercel.app
NEXTAUTH_URL=https://antsss-tattoo-marketplace-preview-{PR_NUMBER}.vercel.app

# Database Configuration (Preview)
DATABASE_URL=postgresql://preview_user:password@preview_host:5432/antsss_tattoo_preview

# Authentication (Preview)
NEXTAUTH_SECRET=your_preview_nextauth_secret_key
JWT_SECRET=your_preview_jwt_secret_key

# OAuth Providers (Preview)
GOOGLE_CLIENT_ID=your_preview_google_client_id
GOOGLE_CLIENT_SECRET=your_preview_google_client_secret

# File Upload Configuration (Preview)
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Feature Flags (Preview)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
NEXT_PUBLIC_DEBUG_MODE=true

# Logging and Debugging (Preview)
LOG_LEVEL=debug
NEXT_PUBLIC_DEBUG_MODE=true

# Payment Integration (Preview - Mock/Test Mode)
STRIPE_PUBLISHABLE_KEY=pk_test_preview_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_preview_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_preview_webhook_secret

# Email Configuration (Preview - Mock)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=preview_smtp_user
SMTP_PASS=preview_smtp_password
SMTP_FROM=noreply@preview.antsss.dev

# Redis Configuration (Preview)
REDIS_URL=redis://preview-redis:6379

# Search Configuration (Preview)
ELASTICSEARCH_URL=http://preview-elasticsearch:9200

# API Rate Limiting (Preview - Very Lenient)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=500

# Monitoring (Preview - Minimal)
SENTRY_DSN=https://your_preview_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_org
SENTRY_PROJECT=antsss-preview
SENTRY_AUTH_TOKEN=your_preview_sentry_auth_token
SENTRY_ENVIRONMENT=preview

# Security Headers (Preview - Relaxed)
SECURE_HEADERS_ENABLED=false
CSP_REPORT_ONLY=true

# Testing and Development (Preview)
ENABLE_TEST_ROUTES=true
MOCK_EXTERNAL_APIS=true
PREVIEW_TEST_USER=preview_test@antsss.dev
PREVIEW_TEST_PASSWORD=preview_test_password_123

# Preview-Specific Features
SHOW_ENV_BANNER=true
PREVIEW_MODE=true
DISABLE_ANALYTICS=true
ENABLE_DEBUG_TOOLBAR=true