# Development Environment Configuration
# This file contains default values for local development
# Copy to .env.local and customize as needed

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_ENV=development
NEXT_PUBLIC_APP_NAME="Antsss (Dev)"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Supabase Configuration (Development)
# Replace with your development Supabase project credentials
NEXT_PUBLIC_SUPABASE_URL=https://your-dev-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-development-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-development-service-key
SUPABASE_JWT_SECRET=your-development-jwt-secret

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres
DIRECT_URL=postgresql://postgres:password@localhost:54322/postgres

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=development-secret-key-change-in-production

# Email Service (Development - Use Mailtrap or similar)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-pass
SMTP_FROM=noreply@antsss-dev.com

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif
UPLOAD_PROVIDER=supabase

# Feature Flags (Development)
NEXT_PUBLIC_FEATURE_BOOKING_V2=true
NEXT_PUBLIC_FEATURE_ADVANCED_SEARCH=true
NEXT_PUBLIC_FEATURE_AI_RECOMMENDATIONS=false
NEXT_PUBLIC_FEATURE_REAL_TIME_CHAT=true

# Analytics and Monitoring (Development)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_HOTJAR_ID=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=300  # 5 minutes

# Search Configuration
SEARCH_PROVIDER=internal
ELASTICSEARCH_URL=http://localhost:9200

# Payment Processing (Development/Sandbox)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Social Login (Development)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Development Tools
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_DEBUG_TOOLBAR=true
NEXT_PUBLIC_ENABLE_MOCK_API=false

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Security Configuration
BCRYPT_ROUNDS=10
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Third-party Integrations (Development)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-phone

# Backup and Storage
BACKUP_ENABLED=false
S3_BUCKET=antsss-dev-backups
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-key
S3_SECRET_ACCESS_KEY=your-s3-secret

# Development Debugging
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_QUERY_LOGGING=true