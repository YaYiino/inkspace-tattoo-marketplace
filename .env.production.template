# Antsss Tattoo Marketplace - Production Environment Variables Template
# Copy this to .env.production and fill in the actual values

# ==================================================
# CORE APPLICATION CONFIGURATION
# ==================================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://antsss.com
NEXTAUTH_URL=https://antsss.com

# ==================================================
# SECURITY SECRETS (Generate strong random values)
# ==================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
JWT_SECRET=your_jwt_secret_here
HEALTH_CHECK_TOKEN=your_health_check_token_here

# ==================================================
# SUPABASE PRODUCTION CONFIGURATION
# ==================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ==================================================
# OAUTH PROVIDERS (Production Apps)
# ==================================================
GOOGLE_CLIENT_ID=your_prod_google_client_id
GOOGLE_CLIENT_SECRET=your_prod_google_client_secret

# ==================================================
# ANALYTICS & MONITORING
# ==================================================
# Google Analytics 4
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=antsss-tattoo-marketplace

# ==================================================
# EMAIL SERVICE (SendGrid)
# ==================================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_FROM=noreply@antsss.com

# ==================================================
# PERFORMANCE & CDN
# ==================================================
NEXT_PUBLIC_CDN_URL=https://cdn.antsss.com
IMAGE_OPTIMIZATION_URL=https://antsss.com/_next/image

# ==================================================
# RATE LIMITING & CACHING (Redis/Upstash)
# ==================================================
REDIS_URL=redis://your_redis_url:6379
UPSTASH_REDIS_REST_URL=https://your_upstash_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# ==================================================
# STORAGE & FILE UPLOADS
# ==================================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# ==================================================
# FEATURE FLAGS
# ==================================================
ENABLE_REGISTRATION=true
ENABLE_BOOKING_SYSTEM=true
ENABLE_PAYMENTS=false
ENABLE_REVIEWS=true
ENABLE_MESSAGING=true

# ==================================================
# BUSINESS CONFIGURATION
# ==================================================
PLATFORM_FEE_PERCENTAGE=10
ARTIST_VERIFICATION_REQUIRED=true
AUTO_APPROVE_BOOKINGS=false

# ==================================================
# MONITORING & ALERTING
# ==================================================
# UptimeRobot
UPTIME_ROBOT_API_KEY=your_uptimerobot_key

# Slack Webhooks
SLACK_ALERT_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook
SLACK_GENERAL_WEBHOOK=https://hooks.slack.com/services/your/general/webhook

# ==================================================
# DEPLOYMENT & CI/CD
# ==================================================
VERCEL_TOKEN=your_vercel_token
GITHUB_TOKEN=your_github_token

# ==================================================
# DATABASE CONFIGURATION
# ==================================================
DB_POOL_SIZE=20
DB_MAX_CONNECTIONS=100
DB_IDLE_TIMEOUT=300000

# ==================================================
# LEGAL & COMPLIANCE
# ==================================================
PRIVACY_POLICY_URL=https://antsss.com/privacy
TERMS_OF_SERVICE_URL=https://antsss.com/terms
SUPPORT_EMAIL=support@antsss.com