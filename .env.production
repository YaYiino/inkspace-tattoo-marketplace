# Production Environment Configuration
NODE_ENV=production

# Supabase Configuration - Production
NEXT_PUBLIC_SUPABASE_URL=https://prod-antsss-tattoo.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=prod_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=prod_service_role_key_here

# Application URLs
NEXT_PUBLIC_APP_URL=https://antsss.com
NEXTAUTH_URL=https://antsss.com

# Database Configuration
DATABASE_URL=postgresql://prod_user:prod_password@prod-db.supabase.co:5432/postgres

# Authentication
NEXTAUTH_SECRET=production_secret_key_strong_random_string
JWT_SECRET=production_jwt_secret_strong_random_string

# OAuth Providers - Production
GOOGLE_CLIENT_ID=prod_google_client_id
GOOGLE_CLIENT_SECRET=prod_google_client_secret

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=20971520
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Logging and Debugging
LOG_LEVEL=error
NEXT_PUBLIC_DEBUG_MODE=false

# Feature Flags - Production
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=prod_mixpanel_token

# Error Reporting
SENTRY_DSN=https://sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=sentry_auth_token

# Payment Integration - Production
STRIPE_PUBLISHABLE_KEY=pk_live_your_prod_stripe_key
STRIPE_SECRET_KEY=sk_live_your_prod_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_prod_webhook_secret

# Email Configuration - Production
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=sendgrid_api_key
SMTP_FROM=noreply@antsss.com

# Redis Configuration - Production
REDIS_URL=rediss://prod_redis_url

# Search Configuration - Production
ELASTICSEARCH_URL=https://prod_elasticsearch_url

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.antsss.com

# API Rate Limiting - Production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# Monitoring
HEALTH_CHECK_TOKEN=prod_health_check_token
UPTIME_MONITOR_URL=https://uptimerobot.com/webhook

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30